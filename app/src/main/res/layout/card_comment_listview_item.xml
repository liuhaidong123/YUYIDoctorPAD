<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/user_message_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.technology.yuyidoctorpad.lhdUtils.RoundImageView
            android:id="@+id/head_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
             />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/head_img"
            android:text=""
            android:textColor="@color/color_6a6a6a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/head_img"
            android:text=""
            android:textColor="@color/color_cccccc"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/card_user_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@id/name"
            android:layout_alignParentEnd="true"
            android:textSize="11sp"
            />

        <ImageView
            android:id="@+id/car_user_praise_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/card_user_praise_num"
            android:layout_alignTop="@id/name"
            android:padding="5dp"
             />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/name"
            android:layout_below="@id/time"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/color_6a6a6a"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/name"
            android:layout_below="@id/content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_f1f1f1" />
    </RelativeLayout>
</RelativeLayout>