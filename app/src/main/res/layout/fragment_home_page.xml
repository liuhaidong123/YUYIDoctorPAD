<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context="com.technology.yuyidoctorpad.fragment.HospitalHomePageFragment.HomePageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp">


        <View
            android:id="@+id/h_line2"
            android:layout_width="5dp"
            android:layout_height="80dp"
           />

        <TextView
            android:id="@+id/h_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/h_line2"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/h_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/h_name"
            android:layout_below="@+id/h_name"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/h_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/h_name"
            android:layout_below="@+id/h_grade"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/h_img"
            android:layout_width="370dp"
            android:layout_height="206dp"
            android:layout_below="@+id/h_telephone"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
         />

        <TextView
            android:id="@+id/h_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/h_img"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:scrollbars="vertical"
            android:singleLine="false"
            android:id="@+id/h_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/h_message"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/h_img"
            android:lineSpacingExtra="15dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="15sp" />
    </RelativeLayout>



</RelativeLayout>
