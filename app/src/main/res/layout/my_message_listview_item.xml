<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/style_whitec"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/my_message_notifi_item"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <RelativeLayout
            android:layout_width="150dp"
            android:id="@+id/lf"
            android:layout_height="match_parent">
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <com.technology.yuyidoctorpad.lzhViews.MyImageView
                    android:id="@+id/my_message_titleImage_item"
                    android:layout_width="40dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/erroruser"
                    android:scaleType="fitCenter"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_toLeftOf="@+id/my_message_notifi_time_item"
                    android:text=""
                    android:textSize="@dimen/size15"
                    android:textColor="@color/color_333333"
                    android:layout_marginTop="10dp"
                    android:id="@+id/my_message_notifi_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="8"/>
            </LinearLayout>
            </RelativeLayout>

        <View
            android:layout_toRightOf="@+id/lf"
            android:id="@+id/fga"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#f1f1f1"/>
        <RelativeLayout
            android:paddingRight="20dp"
            android:layout_toRightOf="@+id/fga"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/my_message_notifi_layout_item"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView style="@style/TextS15C3Lwrap"
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text=""
                        android:layout_toLeftOf="@+id/my_message_notifi_time_item"
                        android:id="@+id/msgItemTitle"/>
                    <TextView
                        android:textSize="@dimen/size15"
                        android:textColor="#888888"
                        android:layout_alignParentRight="true"
                        android:text="12:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_message_notifi_time_item"/>
                </RelativeLayout>

                <TextView
                    android:text=""
                    android:textSize="@dimen/size15"
                    android:textColor="@color/color_333333"
                    android:id="@+id/my_message_notifi_msg_item"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>