<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hospital_add_depart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="20dp"
    tools:context="com.technology.yuyidoctorpad.activity.Hospital.HospitalAddDepartActivity">
    <include layout="@layout/titleinclude"
        android:id="@+id/addDepartInclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </include>
    <View
        android:id="@+id/addfg"
        android:layout_below="@+id/addDepartInclude"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"/>
    <ListView
        android:dividerHeight="15dp"
        android:divider="#00ffffff"
        android:layout_below="@+id/addfg"
        android:id="@+id/addDepartListView"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingTop="40dp"
        android:scrollbars="none"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/addDepartSubmit"
        style="@style/LayoutMatch"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/addDepartSubmit"
        android:text="确认添加"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/size18"
        android:layout_height="44dp"
        android:background="@drawable/btn"/>
</RelativeLayout>
