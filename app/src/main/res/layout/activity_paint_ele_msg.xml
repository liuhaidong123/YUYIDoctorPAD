<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_paint_ele_msg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context="com.technology.yuyidoctorpad.activity.PaintList.PaintEleMsgActivity">

    <RelativeLayout
        android:id="@+id/elec_mess_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="病历详情"
            android:textColor="#333333"
            android:textSize="17sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/elec_mess_title"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="25dp"
            android:background="@drawable/bac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--就诊时间-->
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="就诊时间"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/eleMsg_text_creatTime"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                />
            <!--就诊医院-->
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="就诊医院"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/eleMsg_text_hospitalName"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                />
            <!--就诊科室-->
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="就诊科室"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/eleMsg_text_KS"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                />
            <!--就诊医生-->
            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="就诊医生"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/eleMsg_text_DocName"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                />
            <RelativeLayout
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#f0f8fa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病例内容"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_marginTop="15dp"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginBottom="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    android:id="@+id/ele_message"/>
            </RelativeLayout>
            <com.technology.yuyidoctorpad.lzhViews.MyGridView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:numColumns="3"
                android:verticalSpacing="15dp"
                android:horizontalSpacing="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/ele_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp">
            </com.technology.yuyidoctorpad.lzhViews.MyGridView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
