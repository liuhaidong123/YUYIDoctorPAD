<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <ScrollView android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbars="none">
       <RelativeLayout style="@style/LayoutMatch">
           <RelativeLayout style="@style/LayoutWrap"
               android:layout_centerInParent="true">
               <com.technology.yuyidoctorpad.lzhViews.FormView
                   android:id="@+id/form_press"
                   android:layout_width="455dp"
                   android:layout_height="239dp"/>
                <RelativeLayout style="@style/LayoutWrap"
                    android:paddingLeft="36dp"
                    android:paddingTop="42dp"
                    android:layout_toRightOf="@+id/form_press">
                    <RelativeLayout
                        android:id="@+id/rela"
                        style="@style/LayoutWrap">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/press_image"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/a_unmesure"/>
                        <LinearLayout android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/press_image"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:gravity="center_horizontal"
                                style="@style/LayoutWrap"
                                android:orientation="vertical">
                                <TextView style="@style/TextS15C3Lwrap"
                                    android:id="@+id/highPress"
                                    android:text="0"
                                    />
                                <TextView
                                style="@style/TextS10C6Lwrap"
                                android:text="收缩压（高压）"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="7dp"
                                />
                                </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="24dp"
                                android:gravity="center_horizontal"
                                style="@style/LayoutWrap"
                                android:orientation="vertical">
                                <TextView style="@style/TextS15C3Lwrap"
                                    android:id="@+id/lowPress"
                                    android:text="0"
                                    />
                                <TextView style="@style/TextS10C6Lwrap"
                                    android:text="舒张压（低压）"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="7dp"
                                    />
                            </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:layout_below="@+id/rela">
                            <TextView style="@style/TextS15C6Lwrap"
                                android:text="正常血压范围值"
                                android:layout_gravity="center_horizontal"/>

                            <TextView
                                android:layout_marginTop="14dp"
                                style="@style/TextS15C6Lwrap"
                                android:text="@string/_90mmhg_140mmhg"
                                />

                            <TextView
                            android:layout_marginTop="4dp"
                            style="@style/TextS15C6Lwrap"
                            android:text="@string/_60mmhg_90mmhg"
                            />
                        </LinearLayout>
                    </RelativeLayout>
           </RelativeLayout>
       </RelativeLayout>
       </ScrollView>
</LinearLayout>