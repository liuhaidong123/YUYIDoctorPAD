<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <RelativeLayout
            android:id="@+id/left"
            android:background="#e5f6fb"
            android:layout_width="75dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="2017"
                    android:textColor="#1ebeec"
                    android:id="@+id/data_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="08-20"
                    android:textColor="#1ebeec"
                    android:id="@+id/data_monthDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/left"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14sp"
                android:text="科室"
                android:layout_toLeftOf="@+id/hospital_hospitalName"
                android:layout_marginRight="5dp"
                android:id="@+id/hospital_keshi"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="涿州市中医院"
                android:id="@+id/hospital_hospitalName"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="消化不良是日常生活中最常见的疾病"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/ms"
                android:layout_marginRight="5dp"
                android:id="@+id/hospital_msg"/>
            <LinearLayout
                android:id="@+id/ms"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginRight="5dp"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:text="详情"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ret"/>
            </LinearLayout>

        </RelativeLayout>
