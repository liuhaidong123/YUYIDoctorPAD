<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    
    <RelativeLayout
        android:paddingRight="40dp"
       android:paddingLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <com.technology.yuyidoctorpad.lhdUtils.RoundImageView
            android:id="@+id/doctor_head_img"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/doctor_head_img"
            android:layout_marginLeft="25dp"
            android:textSize="15sp"
            android:text=""
            android:textColor="@color/color_333333"
            />

        <TextView
            android:id="@+id/doctor_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/doctor_name"
            android:layout_marginLeft="12dp"
            android:textSize="13sp"
            android:text=""
            android:textColor="@color/color_333333"
            />
        <TextView
            android:id="@+id/doctor_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:text=""
            android:textColor="@color/color_333333"
            />
    </RelativeLayout>
</RelativeLayout>