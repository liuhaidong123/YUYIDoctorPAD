<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--数据请求动画-->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--弹窗样式中心弹窗-->
    <style name="popup3_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop3_in</item>
        <item name="android:windowExitAnimation">@anim/pop3_out</item>
    </style>
    <!--弹窗样式:屏幕右边到左边-->
    <style name="popup4_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop4in</item>
        <item name="android:windowExitAnimation">@anim/pop4out</item>
    </style>

    <style name="LayoutWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LayoutMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


